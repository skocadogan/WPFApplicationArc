<Window x:Class="WPFApplicationArc.Pages.DepartmentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplicationArc.Pages"
        mc:Ignorable="d"
        Title="DepartmentForm" Height="178" Width="316">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Height="162">
            <Label Content="Bölüm Adı" Margin="10"/>
            <TextBox x:Name="DepartmentName" Text="{Binding Name}" Padding="2" Margin="10" />
            <Button x:Name="DepSaveBtn" Content="Tamam" Width="60" HorizontalAlignment="Left" Margin="10" Click="DepSaveBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
